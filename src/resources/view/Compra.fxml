<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.CompraController"
            prefWidth="1200" prefHeight="700" fx:id="root" stylesheets="@/css/compra.css">
    
    <top>
        <VBox alignment="CENTER" spacing="20">
            <HBox spacing="10" alignment="CENTER">
                <Label text="Compra de Boletos - Estadio" styleClass="titulo"/>
            </HBox>
            <HBox spacing="15" alignment="CENTER">
                <ComboBox fx:id="comboCategoria" promptText="Selecciona una zona" prefWidth="250"/>
                <Button fx:id="btnCargarZona" styleClass="primary-button">
                    <graphic>
                        <ImageView fx:id="cargarZonaIcon" fitWidth="20" fitHeight="20"/>
                    </graphic>
                    <text>Cargar Zona</text>
                </Button>
            </HBox>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </VBox>
    </top>

    <center>
        <HBox spacing="30" alignment="CENTER">
            <!-- Mapa del estadio -->
            <VBox alignment="CENTER" spacing="10" prefWidth="400">
                <ImageView fx:id="mapaEstadio" fitWidth="350" fitHeight="400"/>
                <HBox spacing="5" alignment="CENTER">
                    <ImageView fx:id="mapaIcon" fitWidth="20" fitHeight="20"/>
                    <Label text="Mapa del Estadio" styleClass="subtitulo"/>
                </HBox>
            </VBox>
            <!-- Asientos -->
            <ScrollPane fitToWidth="true" fitToHeight="true" maxWidth="600" maxHeight="500">
                <GridPane fx:id="gridAsientos" hgap="10" vgap="10" alignment="CENTER">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                </GridPane>
            </ScrollPane>
        </HBox>
    </center>

    <right>
        <VBox alignment="TOP_CENTER" spacing="20" styleClass="login-card" prefWidth="300">
            <Label text="Resumen de Compra" styleClass="subtitulo"/>
            <VBox spacing="10">
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <ImageView fx:id="zonaIcon" fitWidth="20" fitHeight="20"/>
                    <Label fx:id="zonaLabel" text="Zona: - " styleClass="label"/>
                </HBox>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <ImageView fx:id="asientoIcon" fitWidth="20" fitHeight="20"/>
                    <Label fx:id="asientoLabel" text="Asiento: - " styleClass="label"/>
                </HBox>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <ImageView fx:id="precioIcon" fitWidth="20" fitHeight="20"/>
                    <Label fx:id="precioLabel" text="Precio: - " styleClass="label"/>
                </HBox>
            </VBox>
            <Button fx:id="btnConfirmar" styleClass="primary-button" disable="true">
                <graphic>
                    <ImageView fx:id="confirmarIcon" fitWidth="20" fitHeight="20"/>
                </graphic>
                <text>Confirmar Compra</text>
            </Button>
            <Label fx:id="mensajeLabel" styleClass="message-label" visible="false"/>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </VBox>
    </right>

    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="btnVolver" styleClass="secondary-button" prefWidth="200">
                <graphic>
                    <ImageView fx:id="volverIcon" fitWidth="20" fitHeight="20"/>
                </graphic>
                <text>Volver al Men√∫</text>
            </Button>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>